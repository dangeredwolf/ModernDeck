{
	"name": "__MSG_name__",
	"short_name": "ModernDeck",

	"author":"dangered wolf",

	"description": "__MSG_description__",

	"version": "9.5",

	"default_locale":"en",

	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"https://tweetdeck.twitter.com/*"
	],

	"content_scripts": [
		{
			"matches": ["https://tweetdeck.twitter.com/*"],
			"js": ["extension/content.js"],
			"run_at": "document_end"
		}
	],

	"icons": {
		"16": "ModernDeck16.png",
		"24": "ModernDeck24.png",
		"32": "ModernDeck32.png",
		"48": "ModernDeck48.png",
		"64": "ModernDeck64.png",
		"128": "ModernDeck128.png",
		"150": "ModernDeck150.png"
	 },

	"web_accessible_resources": [
		"assets",
		"assets/*",
		"assets/moderndeck.js.map",
		"assets/cssextensions/*",
		"assets/fonts/*",
		"assets/libraries/*",
		"assets/img/*"
	],

	"background": {
		"scripts": [
			"extension/background.js"
		],
		"persistent": true
	},

	"browser_action": {
		"default_icon": "ModernDeck64.png",
		"default_popup": "extension/popover.html",
		"default_title": "__MSG_launch__"
	},

	"manifest_version": 2
}
