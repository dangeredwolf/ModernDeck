{
  "name": "ModernDeck",
  "short_name": "ModernDeck",

  "description": "The world's most loved twitter client.",
  "version": "6.0",

  "minimum_edge_version": "33.14281.1000.0",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://tweetdeck.twitter.com/",
    "https://tweetdeckenhancer.com/",
    "https://dangeredwolf.com/",
    "https://ton.twimg.com/",
    "contextMenus",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*"],
      "js": ["extension/MTDLoad.js"],
      "css": ["sources/dev.css"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["extension/MTDBackground.js"],
    "persistent": true
  },

  "icons": {
      "16": "AppIcon16.png",
      "24": "AppIcon24.png",
      "32": "AppIcon32.png",
      "48": "AppIcon48.png",
      "64": "AppIcon64.png",
      "128": "Icon.png",
      "500": "sources/mtdabout.png"
   },

  "web_accessible_resources": [
    "sources",
    "sources/*"
  ],

  "browser_action": {
    "default_icon": "sources/oneclick/InstaTweetDeck.png",
    "default_popup": "extension/ITD.html",
    "default_title": "Launch TweetDeck"
  },

  "manifest_version": 2
}
