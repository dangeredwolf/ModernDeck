{
  "name": "ModernDeck",
  "short_name": "ModernDeck",

  "description": "TweetDeck, just more beautiful, colourful, customisable, fast, and fun than ever.",
  "version": "6.1.2",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*.twitter.com/",
    "https://ton.twimg.com/",
    "contextMenus",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://tweetdeck.twitter.com/*"],
      "js": ["extension/MTDLoad.js"],
      "css": ["sources/moderndeck.min.css"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["extension/MTDBackground.js"]
  },

  "icons": {
      "16": "AppIcon16.png",
      "24": "AppIcon24.png",
      "32": "AppIcon32.png",
      "48": "AppIcon48.png",
      "64": "AppIcon64.png"
   },

  "web_accessible_resources": [
    "sources",
    "sources/*",
    "sources/cssextensions/*",
    "sources/fonts/*",
    "sources/libraries/*"
  ],

  "browser_action": {
    "default_icon": "sources/oneclick/InstaTweetDeck.png",
    "default_popup": "extension/ITD.html",
    "default_title": "Launch TweetDeck"
  },

  "manifest_version": 2
}
